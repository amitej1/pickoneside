
<style type="text/css">
body {
	color:#333;
	width:600px;
	font-size:14px;
	font-family:Verdana, Geneva, sans-serif;
	margin:0 auto;
	padding:0 100px;
}

a:focus {
outline: none;
}
a.trigger{

	width:141px;

/*
	background:#88bbd4 6% 55% ;*/
	background:#25383C 6% 55% ;
	
	text-decoration: none;
	font-size: 16px;
	letter-spacing:1px;
	font-family: verdana, helvetica, arial, sans-serif;
	color:#fff;
	padding:4px 12px 6px 24px;
	font-weight: bold;
	transition:all 300ms ease-in-out 10ms;
	-moz-transition:all 300ms ease-in-out 10ms;
	-o-transition:all 300ms ease-in-out 10ms;
	-webkit-transition:all 300ms ease-in-out 10ms;
	z-index:2;
}
a.trigger:hover{
	background-color:#25383C; /*#59B;*/
	width:146px;
    -moz-box-shadow:    inset 0 0 10px #111;
    -webkit-box-shadow: inset 0 0 10px #111;
   	box-shadow:         inset 0 0 10px #111;
}
a.trigger.left {
	left: 0;
	border-top-right-radius: 5px;
	-moz-border-radius-topright: 5px;
	-webkit-border-top-right-radius: 5px;
	-moz-border-radius-bottomright: 5px;
	-webkit-border-bottom-right-radius: 5px;
	border-bottom-right-radius: 5px;
}
a#trigger1{
	top:100px !important;
	z-index: 999;
	position: fixed !important;
}
a#trigger2{
	top:160px !important;
	z-index: 990;
	position:fixed !important;
}

a.active.trigger {
	-moz-box-shadow:    inset 0 0 10px #111;
    -webkit-box-shadow: inset 0 0 10px #111;
   	box-shadow:         inset 0 0 10px #111;
	background:#666 6% 55% ;

	width:141px;
	border-width: 2px;
	border-color: #333;
	border-style: solid;
}

div.panel{
	
	text-shadow: 0 1px 0 rgba(0, 0, 0, 0.5);
	display: block;
	clear: both;
	font-weight: normal;
	line-height: 18px;
	text-decoration: none;
	color:#CCC;
	position: absolute;
	background: #222;
	width: 300px;
	height: auto;
	z-index:1;
	border-radius:4px;
	border-width: 0.8px;
	border-color: #333;
	border-style: solid;
	-moz-box-shadow:    inset 0 0 10px #111;
    -webkit-box-shadow: inset 0 0 10px #111;
   	box-shadow:         inset 0 0 10px #111;
}
div.panel ul{
	list-style:none !important;
	padding: 5px 0px !important;
	margin:0px
}
div.panel ul li{
	display:block;
	line-height: 18px;
	padding:5px 5px;
}
div.panel ul li a{

	color: #999;
	text-shadow: 0 1px 0 rgba(0, 0, 0, 0.5);
	display: block;
	padding: 4px 15px;
	clear: both;
	font-weight: normal;
	line-height: 18px;
}
div.panel ul li:hover{
	text-decoration: none;
	background-color: #000;
	opacity:0.8;
	color:#fff;
	font-weight:bold;

}
div.panel ul li a:hover
{
	text-decoration: none;
}
.panel.left {
	left: 0;
	padding: 20px 30px 20px 100px;
	border-top-right-radius: 15px;
	-moz-border-radius-topright: 15px;
	-webkit-border-top-right-radius: 15px;
	-moz-border-radius-bottomright: 15px;
	-webkit-border-bottom-right-radius: 15px;
	border-bottom-right-radius: 15px;
}

.panel p {
	font-size:12px;
}
#panel1{
	opacity:1;
	position:fixed !important;
	top:140px !important;
	z-index: 998;
}
#panel2{
	opacity:0.9;
	position:fixed !important;
	top:200px !important;
	z-index: 989;
}
</style>

<script type="text/javascript" src="/assets/jquery2.min.js"></script>

<script type="text/javascript" src="/assets/jquery.slidePanel.min.js"></script>




<script type="text/javascript">
$(document).ready(function(){

	// default settings
	// $('.panel').slidePanel();
	
	// custom settings
	$('#panel1').slidePanel({
		triggerName: '#trigger1'
		//position: 'fixed',
		//triggerTopPos: '20px',
		//panelTopPos: '10px'
		//ajax: true
		//ajaxSource: 'ajax.html'
	});
	$('#panel2').slidePanel({
		triggerName: '#trigger2'
		//position: 'fixed',
		//triggerTopPos: '20px',
		//panelTopPos: '10px'
		//ajax: true
		//ajaxSource: 'ajax.html'
	});
	$('#trigger1').click(function(){
		$('#panel2').hide();
		$('#trigger2').removeClass('active');
	});
	$('#trigger2').click(function(){
		$('#panel1').hide();
		$('#trigger1').removeClass('active');
	});

	

});
</script>



<a href="#" id="trigger1" class="trigger left">Latest Debates</a>

<div id="panel1" class="panel" style="height:auto;width:170px;float:right;display:none;" >



<ul id = "warsList">

		<% @warsLatestNav.each do |war| %>

		<li id="abcd">
			<%= link_to war.topic, war_path(war) %>
		</li>

		<% end %>

	</ul>
	</div>

<a href="#" id="trigger2" class="trigger left">Hottest Debates</a>
	<div id="panel2" class="panel" style="height:auto;width:170px;float:left;display:none;" >


<ul id = "warsHotList">

		<% @warsHot.each do |war| %>

		<li>
			<%= link_to war.topic, war_path(war) %>
		</li>

		<% end %>

	</ul>
</div>


