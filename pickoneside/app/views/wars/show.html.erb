<table id = "warView">
	<tr>
		<td>  Topic  </td>
		<td width = "30px"> </td>
		<td> <%= @war.topic %> </td>
	</tr>

	<tr>
		<td> Description </td>
		<td width = "30px"> </td>
		<td> <%= @war.description %> </td>
	</tr>
	<tr height="10px"></tr>

	<tr>
		<td> Comments </td>
		<td width = "30px"> </td>
	</tr>
	<tr>
		<td> <%= render partial: 'comment', collection: @war.comments %> </td>
	</tr>



	<tr>
		<td>
		<%= link_to 'Edit', edit_war_path(@war) %>
		</td>
		<td>
		<%= link_to 'Delete', war_path(@war), method: :delete, confirm: "Are you sure?" %>
		</td>
	</tr>	

	<tr>
		<% if logged_in? %>
		<td> <%= render partial: 'comments/form' %> </td>
		<% end %>	
	</tr>
	</table >

	